{{> header }}
<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 well">
      <form class="form-signin form-horizontal center" role="form" action="/login" method="post">
        <div class="field">
          <label class="" for="inputUsername">Username:</label>
          <input type="username" name="username" id="inputEmail" placeholder="username" required autofocus class="form-control">
        </div><br>
        <div class="field">
          <label class="" for="inputPassword">Password:</label>
          <input type="password" name="password" id="inputPassword" required class="form-control">
        </div><br>
        <div class="actions">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>