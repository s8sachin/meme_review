{{> partials/header nav="episodes_list"}}
<div class="container">
  {{#if user}}
    <div class="row">
      <button class="btn btn-primary pull-right" data-toggle="modal" data-target="#newEpisode">
        New Episode
      </button>
    </div><br>
  {{/if}}
  <div class="row" style="overflow-x: auto">
    <table class="table table table-responsive table-hover table-striped table-bordered">
      <thead>
        <th></th>
        <th>Episode No.</th>
        <th>Episode URL</th>
      </thead>
      <tbody>
        {{#if episodes}}
          {{#forEach episodes}}
            <tr>
              <td><img src="{{meme_review_episode_thumb}}" style="max-height: 50px"></td>
              <td>{{meme_review_episode_num}}</td>
              <td><a href="{{meme_review_episode_url}}">{{meme_review_episode_url}}</a></td>
            </tr>
          {{/forEach}}
        {{/if}}
      </tbody>
    </table>
  </div>
</div>
<div id="newEpisode" class="modal fade" role="dialog">
  {{> episode/new }}
</div>